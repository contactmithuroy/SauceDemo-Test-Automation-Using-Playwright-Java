<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Test Suite">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <parameter name="browser" value="chromium"/>
    <parameter name="headless" value="false"/>
    
    <!--   -->
    <test name="Login Tests">
        <classes>
           <class name="com.saucedemo.tests.LoginTest"/>
        </classes>
    </test>
  

    <test name="Inventory Test">
        <classes>
           <class name="com.saucedemo.tests.InventoryTest"/>
        </classes>
    </test>

    <test name="Cart Test">
        <classes>
           <class name="com.saucedemo.tests.CartTest"/>
        </classes>
    </test>
   
    <test name="Logout Test">
        <classes>
           <class name="com.saucedemo.tests.LogoutTest"/>
        </classes>
    </test>
   
    <test name="Product Test">
        <classes>
           <class name="com.saucedemo.tests.ProductTest"/>
        </classes>
    </test>
</suite>
